<h1><%= @list.name %></h1>
<ul>
  <% @list.tasks.each do |task| %>
    <li>
      <% if task.done %>
      <span>
      <%= link_to 'Undo', task_done_path(@list, task), method: :patch %>
        <s><%= task.name %></s>
      </span>
      <% else %>
        <span>
          <%= link_to 'Done', task_done_path(@list, task), method: :patch %>
          <%= task.name %>
        </span>
      <% end %>
      <div>
      <%= link_to 'Edit', edit_list_task_path(@list, task) %>
      <%= link_to 'Delete', list_task_path(@list, task), method: :delete %>
    </div>
    </li>
  <% end %>
</ul>

<button><%= link_to 'Create new task', new_list_task_path(@list) %></button>
<button><%= link_to 'Back', lists_path %></button>
